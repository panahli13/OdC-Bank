                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*(Starting BankSystemApplication).*",
                    "endsPattern": "^.*(Started BankSystemApplication).*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
